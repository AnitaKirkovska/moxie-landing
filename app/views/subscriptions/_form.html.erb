<div class="row">
  <div class="col-md-8 col-md-offset-2 subscription-form">
  
    <p id="notice"><%= notice %></p>
    <%= form_for(@subscription) do |f| %>
      
      <div class="form-group">
        <%= f.text_field :name, class: 'form-control', placeholder: "Внесете го вашето име", required: true%>
      </div>

      <div class="form-group">
        <%= f.email_field :email, class: 'form-control', placeholder: "Внесете го вашиот е-маил", required: true %>
      </div>

      <div class="actions">
        <%= f.submit class: 'btn btn-xl btn-danger', value: "Регистрирај се" %>
      </div>
    <% end %>

  </div>
</div>